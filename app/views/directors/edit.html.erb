<h1>Editing Director #<%= @director.id %></h1>

<%= form_tag(director_url(@director), method: 'patch') do %>
  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name, @director.name %>
  </div>

  <div>
    <%= label_tag :dob %><br />
    <%= text_field_tag :dob, @director.dob %>
  </div>

  <div>
    <%= label_tag :bio %><br />
    <%= text_area_tag :bio, @director.bio %>
  </div>

  <div>
    <%= label_tag :image_url %><br />
    <%= text_field_tag :image_url, @director.image_url %>
  </div>

  <div>
    <%= submit_tag "Update Director" %>
  </div>
<% end %>
