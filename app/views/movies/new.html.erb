<h1>New Movie</h1>

<%= form_tag(movies_url, method: 'post') do %>
  <div>
    <%= label_tag :title %><br />
    <%= text_field_tag :title %>
  </div>

  <div>
    <%= label_tag :year %><br />
    <%= number_field_tag :year %>
  </div>

  <div>
    <%= label_tag :duration %><br />
    <%= number_field_tag :duration %>
  </div>

  <div>
    <%= label_tag :description %><br />
    <%= text_area_tag :description %>
  </div>

  <div>
    <%= label_tag :image_url %><br />
    <%= text_field_tag :image_url %>
  </div>

  <div>
    <%= label_tag :director_id %><br />
    <%#= number_field_tag :director_id, @movie.director_id %>
    <!-- Adding link to new director and drop down -->
    <p><%= link_to 'Add a New Director', new_director_url %></p>
    <%= select_tag(:director_id, options_from_collection_for_select(Director.all, :id, :name, :director_id), :class => "form-control") %>
  </div>

  <div>
    <%= submit_tag "Create Movie" %>
  </div>
<% end %>
