<h1>Movies</h1>

<p><%= link_to 'Add a New Movie', new_movie_url %></p>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Year</th>
      <th>Duration</th>
      <th>Description</th>
      <th>Director</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @movies.each do |movie| %>
    <tr>
      <td><img src="<%= movie.image_url %>" width= 50% height = 30%></td>
      <td><%= movie.title %></td>
      <td><%= movie.year %></td>
      <td><%= movie.duration %></td>
      <td><%= movie.description %></td>
      <td><%#= movie.director_id %>
      <%#= Director.find_by(:id => movie.director_id).name %>
      <%= movie.director.name %>
      </td>

      <td><%= link_to 'Show', movie_url(movie) %></td>
      <td><%= link_to 'Edit', edit_movie_url(movie) %></td>
      <td><%= link_to 'Destroy', movie_url(movie), method: 'delete', data: { confirm: "Do you really want to delete this movie?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

